<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/gray" >
    
		<ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/icon_producto"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="60dp"
	        android:layout_centerVertical="true" />
					
		<TextView
		    android:id="@+id/col_descProducto"
		    android:layout_width="wrap_content"
	   	 	android:layout_height="wrap_content"
	   	 	android:layout_centerVertical="true"
	   	 	android:gravity="right"
	   	 	android:layout_alignParentRight="true"
	    	android:layout_marginRight="60dp"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:text="" />
		
		<TextView
		    android:id="@+id/col_valorProducto"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignEnd="@+id/col_descProducto"
		    android:layout_below="@+id/col_descProducto"
		    android:text=""
		    android:textAppearance="?android:attr/textAppearanceMedium" />
	
	</RelativeLayout>
	
    
    
	<ListView 
        android:id="@+id/listMovimientosProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>
	
</LinearLayout>